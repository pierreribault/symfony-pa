{% extends 'base.html.twig' %}

{% block title %}Traaavl - Générateur{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}

<div class="container mt-20">
    <div class="flex">
        <div
            id="map-container"
            class="w-8/12 rounded-lg outline-none"
            data-departure="{{ app.request.get('departure') }}"
            data-arrival="{{ app.request.get('arrival') }}"
        >
            <div id="map" style="width:900px;height:700px;"></div>
        </div>
        <div id="activities" class="w-4/12 bg-white rounded-lg p-4"></div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script defer
            src="https://maps.googleapis.com/maps/api/js?key={{ GOOGLE_MAPS_API_KEY }}&libraries=places">
    </script>
{% endblock %}
