{% extends 'base.html.twig' %}

{% block title %}Traaavl - Générateur{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}

<div id="generator-details" class="container mt-20">
    <div class="h-full">
        <div class="flex justify-between">
            <h1>Summary of your amazing roadtrip!</h1>
            <div id="clipboard" class="clipboard">
                <div id="clipboard-icon" class="icon bg-gigas">
                    <i class="fas fa-clipboard"></i>
                </div>
                <label for="copy" class="hidden">Copy</label>
                <input id="copy" class="border-gigas" value="{{ share }}" readonly>
            </div>
        </div>
        <div class="flex items-center">
            <div class="step">
                <div class="h-10"></div>
                <div class="dot"></div>
                <div class="link small"></div>
            </div>
            <p class="text-xl w-full">Departure from {{ departure|capitalize }}</p>
        </div>
        {% for activity in activities %}
            <div class="flex items-center">
                <div class="step">
                    <div class="link"></div>
                    <div class="dot">{{ loop.index }}</div>
                    <div class="link"></div>
                </div>
                <div class="flex my-4 text-violet w-full">
                    <div>
                        <img class="rounded-lg" src="https://lh5.googleusercontent.com/p/AF1QipMgvyHpmLy8ycVVZXDIma9jxKPCg6XQsnIzzB0A=w400-h300-k-no" alt="odwich"/>
                    </div>
                    <div class="p-4 w-full flex flex-col">
                        <div>
                            <h2 class="w-auto inline-block border-eden text-xl font-medium">{{ activity.getName() }}</h2>
                        </div>
                        <div class="flex mt-4">
                            <p class="font-medium text-black text-md mr-4">Address: </p>
                            <p class="text-silver text-md outline-none">{{ activity.getAddress() }}</p>
                        </div>
                        <div class="flex">
                            <p class="font-medium text-black text-md mr-4">Phone: </p>
                            <p class="text-silver text-md outline-none">{{ activity.getPhone() }}</p>
                        </div>
                        <div class="flex mt-4">
                            <p class="text-md outline-none">{{ activity.getDescription() }}</p>
                        </div>
                        <div class="flex justify-between mt-auto">
                            <button class="px-5 h-8 rounded-full bg-carnation text-white font-medium text-md">
                                <i class="far fa-trash-alt mr-2"></i>
                                Supprimer du Roadtrip
                            </button>
                            <a href="{{ activity.getReservationUrl() }}">
                                <button class="px-5 h-8 rounded-full bg-gigas text-white font-medium text-md">
                                    <i class="fas fa-external-link-alt mr-2"></i>
                                    Site de réservation
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="flex items-center">
            <div class="step">
                <div class="link small"></div>
                <div class="dot"></div>
                <div class="h-10"></div>
            </div>
            <p class="text-xl w-full">Arrival to {{ arrival|capitalize }}</p>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}
