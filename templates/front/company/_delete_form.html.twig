<form method="post" action="{{ path('front_company_delete', {'id': company.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ company.id) }}">
    <button class="bg-red-600 px-4 rounded-md text-white py-4">Delete</button>
</form>
