{{ form_start(form) }}

    {{ form_widget(form.title, {'attr': {'class': 'border-silver border rounded-sm block px-1.5 py-1 mb-3', 'placeholder': 'Title'}}) }}

    {{ form_widget(form.description, {'attr': {'class': 'border-silver border rounded-sm block px-1.5 py-1'}}) }}

    <select name="roadtrip_ulid">
        {% for roadtrip in app.user.roadtrips %}
            <option value="{{ roadtrip.ulid }}">From {{ roadtrip.departure }} To {{ roadtrip.arrival }}</option>
        {% endfor %}
    </select>

    <button
    class="bg-gradient-to-r from-burn-sienna to-grenadier text-white rounded-full py-2 px-4 mt-5"
    >{{ button_label|default('Post') }}</button>
{{ form_end(form) }}
