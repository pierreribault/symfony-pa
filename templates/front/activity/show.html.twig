{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ activity.address }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>SiteUrl</th>
                <td>{{ activity.reservationUrl }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    {% for image in activity.images%}
                        <img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="">
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('front_app_activity_all') }}">back to list</a>

    <a href="{{ path('front_app_activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}
