{% extends 'base_admin.html.twig' %}

{% block title %}Activity index{% endblock %}

{% block body %}
    <h1>Activity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.name }}</td>
                <td>{{ activity.address }}</td>
                <td>
                    <a href="{{ path('admin_activity_show', {'id': activity.id}) }}" class="button-blue"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('admin_activity_edit', {'id': activity.id}) }}" class="button-green"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun résultats trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_activity_new') }}" class="button-blue">Ajout</a>
{% endblock %}
