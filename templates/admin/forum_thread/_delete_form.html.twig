<form method="post" action="{{ path('admin_forum_thread_delete', {'id': forum_thread.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum_thread.id) }}">
    <button class="button-red">Delete</button>
</form>
