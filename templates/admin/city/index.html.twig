{% extends 'base_admin.html.twig' %}

{% block title %}City index{% endblock %}

{% block body %}
    <h1>City index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Région</th>
                <th>Pays</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.name }}</td>
                <td>{{ city.region }}</td>
                <td>{{ city.country }}</td>
                <td>
                    <a href="{{ path('admin_city_show', {'id': city.id}) }}" class="p-4 bg-blue-700 text-white"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('admin_city_edit', {'id': city.id}) }}" class="p-4 bg-green-700 text-white"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun résultats trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_city_new') }}"><button class="button-blue">Ajout</button></a>
{% endblock %}
