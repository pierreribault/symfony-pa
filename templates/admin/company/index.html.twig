{% extends 'base_admin.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Siret</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.name }}</td>
                <td>{{ company.siret }}</td>
                <td>
                    <a href="{{ path('admin_company_show', {'id': company.id}) }}" class="p-4 bg-blue-700 text-white"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('admin_company_edit', {'id': company.id}) }}" class="p-4 bg-green-700 text-white"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun résultats trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_company_new') }}"><button class="button-blue">Ajout</button></a>
{% endblock %}
