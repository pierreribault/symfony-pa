{% extends 'base_admin.html.twig' %}

{% block title %}RoadTrip index{% endblock %}

{% block body %}
    <h1>RoadTrip index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Utilisateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for road_trip in road_trips %}
            <tr>
                <td>{{ road_trip.author.name }}</td>
                <td>{{ road_trip.createdAt ? road_trip.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ road_trip.updatedAt ? road_trip.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_road_trip_show', {'id': road_trip.id}) }}" class="p-4 bg-blue-700 text-white"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('admin_road_trip_edit', {'id': road_trip.id}) }}" class="p-4 bg-green-700 text-white"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun résultats trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_road_trip_new') }}"><button class="button-blue">Ajout</button></a>
{% endblock %}
