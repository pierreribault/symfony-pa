{% set new = new ?? null %}
<div class="mx-auto px-4 sm:px-8 max-w-6xl">
	<div class="py-8">
		<div class="flex flex-row mb-1 sm:mb-0 justify-between w-full">
			<h2 class="text-6xl font-normal leading-normal mt-0 mb-2 leading-tight">
				{{ title }}
			</h2>
			<div class="text-end">
				{% if new is not null %}
					<form class="flex w-full max-w-sm space-x-3">
						<a href="{{ path(new) }}"
						   class="flex-shrink-0 px-4 py-2 text-base font-semibold text-white bg-blue-600 rounded-lg
							shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500
							focus:ring-offset-2 focus:ring-offset-blue-200">
							Ajout
						</a>
					</form>
				{% endif %}
			</div>
		</div>
		<div class="-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
			<div class="inline-block min-w-full shadow rounded-lg overflow-hidden">
				<table class="min-w-full leading-normal">
					<thead>
					<tr>
						{% for header in headers %}
							<th scope="col" class="px-5 py-3 bg-white  border-b border-gray-200 text-gray-800  text-center text-sm uppercase font-normal">
								{{ header }}
							</th>
						{% endfor %}
					</tr>
					</thead>
					<tbody>
					{% for item in pagination.items %}
						<tr>
							{% for field in fields %}
								<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
									{{ dynamic_field(item, field) }}
								</td>
							{% endfor %}
							<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
								{% if "edit" in actions %}
									<a class="button-blue" href="{{ path(show, {'id': item.id}) }}"><i class="fas fa-eye"></i></a>
								{% endif %}
								{% if "show" in actions %}
									<a class="button-green" href="{{ path(edit, {'id': item.id}) }}"><i class="fas fa-pen"></i></a>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
