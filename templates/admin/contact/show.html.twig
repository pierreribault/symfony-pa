{% extends 'base_admin.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1 class="text-center text-6xl font-normal leading-normal mt-0 mb-2">Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ contact.subject }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ contact.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ contact.lastName }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_contact_index') }}" class="underline text-blue-500"><i class="fas fa-arrow-left"></i> Retour</a>

    <a href="{{ path('admin_contact_edit', {'id': contact.id}) }}" class="p-4 bg-green-700 text-white"><i class="fas fa-pen"></i></a>

    {{ include('admin/contact/_delete_form.html.twig') }}
{% endblock %}
